{
  "name": "semanticsyntax/validator",
  "description": "Lightweight PHP 8.1+ validation helpers â€” where syntax meets meaning.",
  "version": "1.0.0",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php8",
    "validation",
    "validators",
    "semantic",
    "syntax",
    "filter",
    "clean-code"
  ],
  "homepage": "https://github.com/SemanticSyntax/php-validator",
  "authors": [
    {
      "name": "SemanticSyntax",
      "role": "Maintainer",
	  "homepage": "https://github.com/SemanticSyntax"
    }
  ],
  "autoload": {
    "psr-4": {
      "SemanticSyntax\\Validation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SemanticSyntax\\Validation\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.11"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --no-coverage",
    "lint": "vendor/bin/phpcs --standard=phpcs.xml src",
    "fix": "vendor/bin/phpcbf --standard=phpcs.xml src || true",
	"analyse": "vendor/bin/phpstan analyse src --level=max",
    "check": [
      "@lint",
	  "@analyse",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}