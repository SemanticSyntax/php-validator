{
  "name": "semanticsyntax/validator-php5",
  "description": "Legacy-friendly PHP 5.6 validation helpers â€” bringing clarity and meaning to legacy code.",
  "version": "1.0.0",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php5",
    "validation",
    "validators",
    "semantic",
    "syntax",
    "filter",
    "clean-code"
  ],
  "homepage": "https://github.com/SemanticSyntax/php-validator",
  "authors": [
    {
      "name": "SemanticSyntax",
      "role": "Maintainer",
	  "homepage": "https://github.com/SemanticSyntax"
    }
  ],
  "autoload": {
    "psr-4": {
      "SemanticSyntax\\Validation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SemanticSyntax\\Validation\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=5.6 <7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always",
    "lint": "vendor/bin/phpcs --standard=phpcs.xml src",
    "fix": "vendor/bin/phpcbf --standard=phpcs.xml src || true",
    "check": [
      "@lint",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}